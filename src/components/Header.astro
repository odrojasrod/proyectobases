---
const navLinks = [
    { text: 'Usuarios', href: '/usuarios' },
    { text: 'Observaciones', href: '/observaciones' },
    { text: 'CRUD', href: '/crud' },
]
---

<header>
    <nav>
        <ul>
            {
                navLinks.map((link) => (
                    <li
                        class={Astro.url.pathname === link.href ? 'active' : ''}
                    >
                        <a
                            href={link.href}
                            class={
                                Astro.url.pathname === link.href ? 'active' : ''
                            }
                        >
                            {link.text}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>

<style>
    header {
        padding: 1rem 0;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
    }

    nav li {
        margin: 0 1rem;
    }

    nav li.active {
        background-color: rgb(11, 11, 65);
        border-radius: 12px;
        padding-left: 8px;
        padding-right: 8px;
    }

    nav a {
        text-decoration: none;
        color: #000000;
        font-weight: bold;
    }

    nav a.active {
        color: rgb(140, 140, 202);
    }
</style>
